<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context="com.alftendev.simplesoundquicksettings.MainActivity">

    <TextView
        android:id="@+id/tvDND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px"
        android:text="@string/not_completed"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivSoundMode"
            android:layout_width="512px"
            android:layout_height="512px"
            android:layout_margin="10px"
            android:background="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
            app:srcCompat="@drawable/baseline_notifications_active_24" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivDoNotDisturb"
            android:layout_width="512px"
            android:layout_height="512px"
            android:layout_margin="10px"
            android:background="@color/white"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
            app:srcCompat="@drawable/outline_do_not_disturb_on_24" />
    </LinearLayout>

</LinearLayout>